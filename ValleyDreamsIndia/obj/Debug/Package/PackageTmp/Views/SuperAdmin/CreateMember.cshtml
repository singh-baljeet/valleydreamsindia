@model ValleyDreamsIndia.Models.UsersPersonalModelView
@{
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}

<div id="contentHeader">
    <h1>Add New Member</h1>
</div> <!-- #contentHeader -->

@using (Html.BeginForm("CreateMember", "SuperAdmin", FormMethod.Post))
{
    <div class="container">
        <div class="grid-12">
            <div class="widget widget-table">

                <div class="widget-header">
                    <span class="icon-list"></span>
                    <h3 class="icon chart">Required Info</h3>
                </div>

                <div class="widget-content">

                    <table class="table table-bordered table-striped">
                        <thead>

                            <tr>

                                <th colspan="2">
                                    Username:- @ViewBag.Username |  Password:- @ViewBag.Password  | TransactionPassword:- @ViewBag.TransactionPassword
                                </th>
                            </tr>

                            <tr>

                                <th>
                                    <img src="~/Content/images/stream/default1_avatar_small.png" />

                                </th>
                                <th style="vertical-align:middle;">
                                    Profile Picture
                                </th>
                            </tr>


                            <tr>
                                <th>Sponser Id</th>
                                <th>
                                   @Html.TextBoxFor(m => m.UserDetails.UserName)
                                </th>

                            </tr>

                            <tr>
                                <th>Join Date</th>

                                <th>
                                    @DateTime.Now.ToShortDateString()
                                </th>
                            </tr>


                            <tr>
                                <th>Placement</th>
                                <th>
                                    @Html.DropDownListFor(m => m.PersonalDetails.PlacementSide, new SelectList(
                 new List<Object>{
                                                                                           new { value = "LEFT" , text = "LEFT" },
                                                                                           new { value = "RIGHT", text = "RIGHT"}
                   },
                 "value",
                 "text",
                  2))
                                </th>

                            </tr>
                            <tr>
                                <th>Gender</th>
                                <th>
                                    @Html.DropDownListFor(m => m.PersonalDetails.Gender, new SelectList(
                 new List<Object>{
                                                                                           new { value = "Male" , text = "Male" },
                                                                                           new { value = "Female", text = "Female"}
                   },
                 "value",
                 "text",
                  2))
                                </th>

                            </tr>


                            <tr>
                                <th>First Name</th>
                                <th>

                                    @Html.TextBoxFor(m => m.PersonalDetails.FirstName, new { placeholder = "Enter First Name", required = "required" })
                                </th>
                            </tr>

                            <tr>
                                <th>Last Name</th>
                                <th>
                                    @Html.TextBoxFor(m => m.PersonalDetails.LastName, new { placeholder = "Enter Last Name", required = "required" })
                                </th>
                            </tr>

                            <tr>
                                <th>Guardians</th>
                                <th>
                                    @Html.TextBoxFor(m => m.PersonalDetails.FatherName, new { placeholder = "Enter Father's Name", required = "required" })
                                </th>
                            </tr>

                            <tr>
                                <th>Contact</th>
                                <th>
                                    @Html.TextBoxFor(m => m.PersonalDetails.PhoneNumber1, new { placeholder = "Enter Valid Mobile No.", required = "required" })
                                </th>
                            </tr>

                            <tr>
                                <th style="vertical-align:middle;">Address</th>
                                <th>
                                    @Html.TextAreaFor(m => m.PersonalDetails.Address, new { placeholder = "Enter Valid Address", required = "required" })
                                </th>
                            </tr>

                        </thead>


                    </table>



                </div> <!-- .widget-content -->





            </div>





        </div>
        
        <div class="grid-12">
            <div class="widget widget-table">

                <div class="widget-header">
                    <span class="icon-list"></span>
                    <h3 class="icon chart">Additional Info</h3>
                </div>

                <div class="widget-content">

                    <table class="table table-bordered table-striped">
                        <thead>

                            <tr>
                                <th>Alternate Contact</th>
                                <th>
                                    @Html.TextBoxFor(m => m.PersonalDetails.PhoneNumber2, new { placeholder = "Enter Valid Mobile No." })
                                </th>

                            </tr>

                            <tr>
                                <th>Birth Date</th>
                                <th>
                                    @Html.TextBoxFor(m => m.PersonalDetails.BirthDate, new { id = "datepicker1", placeholder = "Select Date of Birth" })
                                </th>
                            </tr>

                            <tr>
                                <th>E-Mail</th>
                                <th>
                                    @Html.TextBoxFor(m => m.PersonalDetails.Email, new { placeholder = "Enter Valid E-Mail Id" })
                                </th>

                            </tr>




                            <tr>
                                <th>State</th>
                                <th>
                                    @Html.TextBoxFor(m => m.PersonalDetails.State, new { placeholder = "Enter State" })
                                </th>

                            </tr>

                            <tr>
                                <th>District</th>
                                <th>
                                    @Html.TextBoxFor(m => m.PersonalDetails.District, new { placeholder = "Enter District" })
                                </th>

                            </tr>

                            <tr>
                                <th>City</th>
                                <th>
                                    @Html.TextBoxFor(m => m.PersonalDetails.City, new { placeholder = "Enter City" })
                                </th>

                            </tr>


                            <tr>
                                <th>Pin-Code</th>
                                <th>
                                    @Html.TextBoxFor(m => m.PersonalDetails.PinCode, new { placeholder = "Enter PinCode" })
                                </th>
                            </tr>



                        </thead>


                    </table>



                </div> <!-- .widget-content -->




            </div>





        </div>
        <div class="grid-12" style="margin-top:20px;">
            <div class="widget widget-table">

                <div class="widget-header">
                    <span class="icon-list"></span>
                    <h3 class="icon chart">Nominee & Banking Info</h3>
                </div>

                <div class="widget-content">

                    <table class="table table-bordered table-striped">
                        <thead>

                            <tr>
                                <th>Nominee</th>
                                <th>
                                    @Html.TextBoxFor(m => m.BankDetails.NomineeName, new { placeholder = "Enter Nominee Name" })
                                </th>

                            </tr>

                            <tr>
                                <th>Relation</th>
                                <th>
                                    @Html.TextBoxFor(m => m.BankDetails.NomineeRelation, new { placeholder = "Relation with Nominee" })
                                </th>

                            </tr>


                            <tr>
                                <th>Bank</th>
                                <th>
                                    @Html.TextBoxFor(m => m.BankDetails.BankName, new { placeholder = "Enter Bank Name" })
                                </th>

                            </tr>
                            <tr>
                                <th>A/C.Holder</th>
                                <th>
                                    @Html.TextBoxFor(m => m.BankDetails.AccountHolderName, new { placeholder = "Enter A/C Holder Name" })
                                </th>
                            </tr>

                            <tr>
                                <th>A/C No.</th>
                                <th>
                                    @Html.TextBoxFor(m => m.BankDetails.AccountNumber, new { placeholder = "Enter Valid A/C No." })
                                </th>

                            </tr>

                            <tr>
                                <th>IFSC Code</th>
                                <th>
                                    @Html.TextBoxFor(m => m.BankDetails.IFSCCode, new { placeholder = "Enter IFSC" })
                                </th>

                            </tr>
                            <tr>
                                <th>Pan</th>
                                <th>
                                    @Html.TextBoxFor(m => m.BankDetails.PANNumber, new { placeholder = "Enter Valid Pan No." })
                                </th>

                            </tr>

                        </thead>


                    </table>



                </div> <!-- .widget-content -->




            </div>



        </div>

    </div>

    <p align="center">
        <span>  <input type="submit" class="btn btn-large btn-blue" value="Submit" />        </span>

        <span style="margin-left:10px;">  <button class="btn btn-large btn-gray">Cancel</button></span>

    </p>

}
