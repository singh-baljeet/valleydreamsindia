        <script>
            $(function () {

                function ShowDialog(modal) {
                    $("#overlay").show();
                    $("#dialog").fadeIn(300);

                    if (modal) {
                        $("#overlay").unbind("click");
                    }
                    else {
                        $("#overlay").click(function (e) {
                            HideDialog();
                        });
                    }
                }

                function HideDialog() {
                    $("#overlay").hide();
                    $("#dialog").fadeOut(300);
                }

                $(".walletCheckPins").click(function (e)
                {
                    $.ajax({
                        url: '/Wallet/WalletCheckPins/',
                        dataType: "json",
                        type: "GET",
                        contentType: 'application/json; charset=utf-8',
                        async: true,
                        processData: false,
                        cache: false,
                        success: function (data) {
                            if (data == "False") {
                                alert("You have no new and renewal pins");
                            }
                        },
                        error: function (xhr) {
                            alert('error');
                        }
                    });
                })

                $(".renewalCheckPins").click(function (e) {
                    $.ajax({
                        url: '/Renewal/RenewalCheckPins/',
                        dataType: "json",
                        type: "GET",
                        contentType: 'application/json; charset=utf-8',
                        async: true,
                        processData: false,
                        cache: false,
                        success: function (data) {
                            if (data == "False") {
                                alert("You have no renewal pins");
                            }
                        },
                        error: function (xhr) {
                            alert('error');
                        }
                    });
                })

                $(".teamCheckPins").click(function (e) {
                    $.ajax({
                        url: '/Team/TeamCheckPins/',
                        dataType: "json",
                        type: "GET",
                        contentType: 'application/json; charset=utf-8',
                        async: true,
                        processData: false,
                        cache: false,
                        success: function (data) {
                            if (data == "False") {
                                alert("You have no new pins");
                            }
                        },
                        error: function (xhr) {
                            alert('Error');
                        }
                    });
                })


                //$("#btnClose").click(function (e) {
                //    HideDialog();
                //    e.preventDefault();
                //});

                $("#memberid").blur(function () {
                    var memId = $(this).val();
                    /// alert(memId);
                    debugger;
                    $.get("/Renewal/Contribution", { memberid: memId }, function (data) {
                    });
                });

                $("#datepicker").datepicker();
                $("#datepicker1").datepicker();
                $("#datepicker_inline").datepicker();
                $('#colorpickerHolder').ColorPicker({ flat: true });
                $('#timepicker').timepicker({
                    showPeriod: true
                    , showNowButton: true
                    , showCloseButton: true
                });

                $('#timepicker_inline_div').timepicker({
                    defaultTime: '9:20'
                });

                $('#colorSelector').ColorPicker({
                    color: '#FF9900',
                    onShow: function (colpkr) {
                        $(colpkr).fadeIn(500);
                        return false;
                    },
                    onHide: function (colpkr) {
                        $(colpkr).fadeOut(500);
                        return false;
                    },
                    onSubmit: function (hsb, hex, rgb, el) {
                        $(el).ColorPickerHide();
                    },
                    onChange: function (hsb, hex, rgb) {
                        $('#colorSelector div').css({ 'background-color': '#' + hex });
                        $('#colorpickerField1').val('#' + hex);
                    }
                });

                $('#colorpickerField1').live('keyup', function (e) {
                    var val = $(this).val();
                    val = val.replace('#', '');
                    $('#colorSelector div').css({ 'background-color': '#' + val });
                    $('#colorSelector').ColorPickerSetColor(val);
                });

            });

        </script>


