@model ValleyDreamsIndia.Common.TreeStructure.Parent
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div id="contentHeader">
    <h1>Binary Tree</h1>
</div> <!-- #contentHeader -->

<div class="container">
    <div class="grid-12">
        <div class="widget widget-table">

            <div class="widget-header">
                <span class="icon-list"></span>
                <h3 class="icon chart">Search User</h3>
            </div>

            @using (Html.BeginForm("TreeByUserId", "Team"))
            {
                        <div class="widget-content">

                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>User Id</th>
                                        <th>
                                            @Html.TextBox("userId", null, new { placeholder= "Enter User Id" })
                                        </th>
                                    </tr>
                                </thead>
                            </table>
                        </div> <!-- .widget-content -->
                        <p align="center" style="margin-top:40px;">
                            <span> 
                                <input type="submit" class="btn btn-large btn-blue" value="Search" />
                             </span>

                            <span style="margin-left:10px;">  <button class="btn btn-large btn-gray">Cancel</button></span>
                        </p>
            }

        </div>





    </div>



    <div class="grid-12">
        <div class="widget widget-table">

            <div class="widget-header">
                <span class="icon-list"></span>
                <h3 class="icon chart">Parent Member Info</h3>
            </div>

            <div class="widget-content">

                <table class="table table-bordered table-striped">
                    <thead>

                        <tr>
                            <th>Sponser Id</th>
                            <th>@ViewBag.Sponsor</th>
                        </tr>
                        <tr>
                            <th>Sponser Name</th>
                            <th>@ViewBag.SponsorName</th>
                        </tr>

                        <tr>
                            <th>User Id</th>
                            <th>@ViewBag.UserName</th>


                        </tr>
                        <tr>
                            <th>Member Name</th>
                            <th>@ViewBag.FullName</th>


                        </tr>

                        <tr>
                            <th>Left</th>
                            <th>@ViewBag.LeftTeam</th>


                        </tr>
                        <tr>
                            <th>Right</th>
                            <th>@ViewBag.RightTeam</th>


                        </tr>
                        <tr>
                            <th>Directs</th>
                            <th>@ViewBag.DirectTeam</th>


                        </tr>







                    </thead>


                </table>


            </div> <!-- .widget-content -->





        </div>
    </div>

    <div class="grid-24">
        <div class="widget widget-table">

            <div class="widget-header">
                <span class="icon-compass"></span>
                <h3>Team Binary Tree</h3>
            </div> <!-- .widget-header -->


            <div class="widget-content">
                <center>
                    <table >
                        <tbody>
                            <tr>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th>
                                    <p align="center" style="margin-right:10px;">
                                        <img src="~/Content/images/stream/defaultavatar_sm.png" />
                                    </p>
                                    <p align="center">
                                        @if (Model.Detail != null)
                                    {
                                            @Model.Detail.Name <br /> @Model.Detail.UserName <br />@Model.Detail.SponsorName
                                    }
                                    </p>
                                    <p align="center">
                                        <button class="btn btn-primary "><span class="icon-loop"></span>Button</button>
                                    </p>
                                </th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                            <tr>
                                <th></th>
                                <th>
                                    <div style="float:left;">
                                        <img src="~/Content/images/stream/defaultavatar_sm.png" />
                                        <br>
                                        @if (Model.Detail != null)
                                    {
                                        if (Model.LeftChildren != null)
                                        {
                                                <span align="center">
                                                    @Model.LeftChildren.Detail.Name <br /> @Model.LeftChildren.Detail.UserName <br />@Model.LeftChildren.Detail.SponsorName <br />
                                                </span>
                                        }
                                    }
                                        <button style="margin-left:5px;" class="btn btn-primary "><span class="icon-loop"></span>Button</button>
                                    </div>
                                </th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th>
                                    <div style="float:right;">
                                        <img src="~/Content/images/stream/defaultavatar_sm.png" />
                                        <br>
                                        @if (Model.Detail != null)
                                    {
                                        if (Model.RightChildren != null)
                                        {
                                                <span style="text-align:center">
                                                    @Model.RightChildren.Detail.Name <br /> @Model.RightChildren.Detail.UserName <br />@Model.RightChildren.Detail.SponsorName  <br />
                                                </span>
                                        }
                                    }
                                        <button style="margin-left:5px;" class="btn btn-primary "><span class="icon-loop"></span>Button</button>
                                    </div>
                                </th>
                                <th></th>
                            </tr>
                            <tr>
                                <th>
                                    <div style="float:left;">
                                        <img src="~/Content/images/stream/defaultavatar_sm.png" />
                                        <br>
                                        @if (Model.Detail != null)
                                    {
                                        if (Model.LeftChildren != null)
                                        {
                                            if (Model.LeftChildren.LeftSubChildren != null)
                                            {
                                                    <span align="center">
                                                        @Model.LeftChildren.LeftSubChildren.Name <br />
                                                        @Model.LeftChildren.LeftSubChildren.UserName <br />
                                                        @Model.LeftChildren.LeftSubChildren.SponsorName <br />
                                                    </span>
                                            }
                                        }
                                    }
                                        <button style="margin-left:5px;" class="btn btn-primary "><span class="icon-loop"></span>Button</button>
                                    </div>

                                </th>
                                <th></th>
                                <th>
                                    <div style="float:right;">
                                        <img src="~/Content/images/stream/defaultavatar_sm.png" />
                                        <br>
                                        @if (Model.Detail != null)
                                    {
                                        if (Model.LeftChildren != null)
                                        {
                                            if (Model.LeftChildren.RightSubChildren != null)
                                            {
                                                    <span style="text-align:center">
                                                        @Model.LeftChildren.RightSubChildren.Name <br />
                                                        @Model.LeftChildren.RightSubChildren.UserName <br />
                                                        @Model.LeftChildren.RightSubChildren.SponsorName  <br />
                                                    </span>
                                            }
                                        }
                                    }
                                        <button style="margin-left:5px;" class="btn btn-primary "><span class="icon-loop"></span>Button</button>
                                    </div>
                                </th>
                                <th></th>
                                <th>
                                    <div style="float:left;">
                                        <img src="~/Content/images/stream/defaultavatar_sm.png" />
                                        <br>
                                        @if (Model.Detail != null)
                                    {
                                        if (Model.RightChildren != null)
                                        {
                                            if (Model.RightChildren.LeftSubChildren != null)
                                            {
                                                    <span align="center">
                                                        @Model.RightChildren.LeftSubChildren.Name <br />
                                                        @Model.RightChildren.LeftSubChildren.UserName <br />
                                                        @Model.RightChildren.LeftSubChildren.SponsorName <br />
                                                    </span>
                                            }
                                        }
                                    }
                                        <button style="margin-left:5px;" class="btn btn-primary "><span class="icon-loop"></span>Button</button>
                                    </div>

                                </th>
                                <th></th>
                                <th>
                                    <div style="float:left;">
                                        <img src="~/Content/images/stream/defaultavatar_sm.png" />
                                        <br>
                                        @if (Model.Detail != null)
                                    {
                                        if (Model.RightChildren != null)
                                        {
                                            if (Model.RightChildren.RightSubChildren != null)
                                            {
                                                    <span align="center">
                                                        @Model.RightChildren.RightSubChildren.Name <br />
                                                        @Model.RightChildren.RightSubChildren.UserName <br />
                                                        @Model.RightChildren.RightSubChildren.SponsorName <br />
                                                    </span>
                                            }
                                        }
                                    }
                                        <button style="margin-left:5px;" class="btn btn-primary "><span class="icon-loop"></span>Button</button>
                                    </div>

                                </th>
                            </tr>

                        </tbody>
                    </table>
                </center>
            </div> <!-- .widget-content -->

        </div>


    </div>


</div>

