@model ValleyDreamsIndia.Models.UsersPersonalModelView
@{
    ViewBag.Title = "ViewProfile";
}

<h2>My Profile</h2>

<table>
    <tr>
        <th>Username</th>
        <td>@Model.UserDetails.Username</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.PersonalDetails.Name</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.PersonalDetails.Email</td>
    </tr>
    <tr>
        <th>Address</th>
        <td>@Model.PersonalDetails.Address</td>
    </tr>
    <tr>
        <th>City</th>
        <td>@Model.PersonalDetails.City</td>
    </tr>
    <tr>
        <th>State</th>
        <td>@Model.PersonalDetails.State</td>
    </tr>
    <tr>
        <th>Phone</th>
        <td>@Model.PersonalDetails.PhoneNumber1</td>
    </tr>
    <tr>
        <th>Mobile</th>
        <td>@Model.PersonalDetails.Mobile</td>
    </tr>
</table>
