
@model ValleyDreamsIndia.Models.UsersPersonalModelView
   


            <div id="contentHeader">
                <h1>User Profile</h1>
            </div> <!-- #contentHeader -->

            <div class="container">
                <div class="grid-17">
                <div class="widget widget-table">

                            <div class="widget-header">
                                <span class="icon-list"></span>
                                <h3 class="icon chart">Profile</h3>
                            </div>

                            <div class="widget-content">

                                <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th><img src="@Model.PersonalDetails.ProfilePic" style="width:150px;height:150px"/></th>
                                        <th style="vertical-align:top;">
                                        <ul>
                                        <li style="font-size:14px;">
                                        Id:@Model.UserDetails.Username
                                        </li>
                                        <li style="font-size:14px;">
                                        @Model.UserDetails.CreatedOn
                                        </li>
                                        <li style="font-size:14px;">
                                            Status: @if (Model.UserDetails.Deleted == 0) { <span>Active</span>} else {<span>Inactive</span>}
                                        </li>
                                        <li style="font-size:14px;">
                                        Package: 1000/-
                                        </li>
                                        </ul>
                                        </th>


                                    </tr>

                                    <tr>
                                        <th>Username</th>
                                        <th>@Model.UserDetails.Username</th>

                                    </tr>
                                        <tr>
                                        <th>Name</th>
                                        <th>@Model.PersonalDetails.Name</th>

                                    </tr>
                                        <tr>
                                        <th>Email</th>
                                        <th>@Model.PersonalDetails.Email</th>

                                    </tr>
                                        <tr>
                                        <th>Address</th>
                                        <th>@Model.PersonalDetails.Address</th>

                                    </tr>
                                        <tr>
                                        <th>State</th>
                                        <th>@Model.PersonalDetails.State</th>

                                    </tr>
                                        <tr>
                                        <th>City</th>
                                        <th>@Model.PersonalDetails.City</th>

                                    </tr>
                                        <tr>
                                        <th>Contact</th>
                                        <th>@Model.PersonalDetails.PhoneNumber1</th>

                                    </tr>
                                    <tr>
                                        <th>Mobile</th>
                                        <th>@Model.PersonalDetails.Mobile</th>

                                    </tr>

    

                                </thead>


                                </table>


                            </div> <!-- .widget-content -->

                    </div>

                </div>
            <div class="grid-7">
                        <div id="gettingStarted" class="box">
                            <h3>Complete Profile</h3>

                            <p>Completing your profile will bring you to 8%.</p>

                            <div class="progress-bar secondary">
                                <div class="bar" style="width: 92%;">92%</div>
                            </div>

                            <ul>
                                <li><p href="javascript:;">Complete Your Profile</p></li>
                                <li><p href="javascript:;">Add Your Photo</p></li>
                                <li><p href="javascript:;">Invite People to Join</p></li>
                                <li><p href="javascript:;">Follow People</p></li>
                            </ul>
                        </div>

                        <br />
    <div style="border:1px solid #000; border-radius:5px;">
                        <h3 style="margin:10px;">Task List</h3>




                        <ul class="taskList">
                            <li>Update your profile.</li>
                            <li>Secure your account.</li>
                            <li>Never share your credentials.</li>
                            <li>Keep changing your passwords.</li>

                        </ul>
    </div>


                        <br /><br /><br />
                    </div>

        </div>


